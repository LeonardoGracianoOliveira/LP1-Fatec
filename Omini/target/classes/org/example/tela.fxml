                            <padding>
                                <Insets top="10" right="10" bottom="10" left="10"/>
                            </padding>

                            <HBox spacing="8">
                                <VBox>
                                    <Label text="Raça"/>
                                    <TextField fx:id="aRaca"/>
                                </VBox>
                                <VBox>
                                    <Label text="Nome"/>
                                    <TextField fx:id="aNome"/>
                                </VBox>
                                <VBox>
                                    <Label text="DNA"/>
                                    <TextField fx:id="aDna"/>
                                </VBox>
                            </HBox>

                            <HBox spacing="8">
                                <Button text="Cadastrar" onAction="#onCreateAlien"/>
