                                    <TableColumn text="Nome" fx:id="aColNome"/>
                                    <TableColumn text="DNA" fx:id="aColDna"/>
                                </columns>
                            </TableView>
                        </VBox>
                    </center>
                </BorderPane>
            </content>
        </Tab>

        <!-- RELOGIO -->
        <Tab text="Relógio">
            <content>
                <BorderPane>
                    <top>
                        <Label text="CRUD - Relógio" style="-fx-font-size:16px; -fx-padding:10;" />
                    </top>
                    <center>
                        <VBox spacing="8">
                            <padding>
                                <Insets top="10" right="10" bottom="10" left="10"/>
                            </padding>

                            <HBox spacing="8">
                                <VBox>
                                    <Label text="Cor"/>
                                    <TextField fx:id="rCor"/>
                                </VBox>
                                <VBox>
